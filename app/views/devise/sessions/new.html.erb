<div class="account-pages mt-5 mb-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5">
        <div class="card">

          <!-- Logo -->
          <div class="card-header p-3 text-center" style="background-color: #d9302c">
            <img src="/images/logo_tec.png" alt="" height="45" style="display: block; float: left; margin-top: 0.5em;">
            <img src="/images/ciie_logo.svg" alt="" height="60" style="display: block; float: right;">
            <p class="p-0 m-0 mt-5 text-center text-white" style="clear: both;"><%= t('general.international_conference') %></p>
            <p class="p-0 m-0 text-center text-white"><%= t('general.education_innovation') %></p>
            <% if I18n.locale == :es %>
              <a href="/users/sign_in?locale=en" class="btn btn-dark p-0 mt-2 mb-0 text-center text-white font-13 text d-block" style="width: 15em; margin: 0 auto;">Switch to English version</a>
            <% else %>
              <a href="/users/sign_in?locale=es" class="btn btn-dark p-0 mt-2 mb-0 text-center text-white font-13 text d-block" style="width: 15em; margin: 0 auto;">Cambiar a versión en español</a>
            <% end %>
          </div>

          <div class="card-body p-4">
            <div class="row mt-0 alert-light p-2 rounded mb-4">
              <div class="col-12 text-center">
                <p class="font-18 m-0"><%= t('registration.no_account') %> <a href="/users/sign_up" class="text-danger ml-1"><b><%= t('registration.register') %></b></a></p>
              </div>
            </div>

            <div class="text-center w-75 m-auto">
              <h4 class="text-dark-50 text-center mt-0 font-weight-bold"><%= t('registration.sign_in') %></h4>
              <p class="text-muted mb-4"><%= t('registration.sign_in_instructions') %></p>
            </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <% flash.each do |key, value| %>
                <% unless value.to_s.empty? %>
                  <% if key == 'alert' %>
                    <div class="alert alert-danger" role="alert">
                      <i class="dripicons-warning mr-2"></i> <%= value %>
                    </div>
                  <% else %>
                    <div class="alert alert-success" role="alert">
                      <i class="dripicons-checkmark mr-2"></i> <%= value %>
                    </div>
                  <% end %>
                <% end %>
              <% end %>

              <div class="form-group">
                <%= f.label :email, t('user.email') %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '', class: 'form-control' %>
              </div>

              <div class="form-group">
                <a href="/users/password/new" class="text-danger float-right"><small><%= t('registration.forgot_password') %></small></a>
                <%= f.label :password, t('user.password') %>
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: '' %>
              </div>

              <div class="form-group mb-3">
              </div>

              <div class="form-group mb-0 text-center">
                <button class="btn btn-dark" type="submit"><%= t('registration.sign_in') %></button>
              </div>

            <%end%>
          </div> <!-- end card-body -->
        </div>
        <!-- end card -->


        <!-- end row -->

      </div> <!-- end col -->
    </div>
    <!-- end row -->
  </div>
  <!-- end container -->
</div>
