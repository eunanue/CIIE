<div class="account-pages mt-5 mb-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5">
        <div class="card">

          <div class="card-header p-3 text-center" style="background-color: #d9302c">
            <img src="/images/logo_tec.png" alt="" height="45" style="display: block; float: left; margin-top: 0.5em;">
            <img src="/images/ciie_logo.svg" alt="" height="60" style="display: block; float: right;">
            <p class="p-0 m-0 mt-5 text-center text-white" style="clear: both;"><%= t('general.international_conference') %></p>
            <p class="p-0 m-0 text-center text-white"><%= t('general.education_innovation') %></p>
            <% if I18n.locale == :es %>
              <a href="/users/password/new?locale=en" class="btn btn-dark p-0 mt-2 mb-0 text-center text-white font-13 text d-block" style="width: 15em; margin: 0 auto;">Switch to English version</a>
            <% else %>
              <a href="/users/password/new?locale=es" class="btn btn-dark p-0 mt-2 mb-0 text-center text-white font-13 text d-block" style="width: 15em; margin: 0 auto;">Cambiar a versión en español</a>
            <% end %>
          </div>

          <div class="card-body p-4">
            <div class="text-center w-75 m-auto">
              <h4 class="text-dark-50 text-center mt-0 font-weight-bold"><%= t('registration.password_recovery') %></h4>
              <p class="text-muted mb-4"><%= t('registration.password_recovery_instructions')%></p>
            </div>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

              <% flash.each do |key, value| %>
                <% unless value.to_s.empty? %>
                  <% if key == 'alert' %>
                    <div class="alert alert-danger" role="alert">
                      <i class="dripicons-warning mr-2"></i> <%= value %>
                    </div>
                  <% else %>
                    <div class="alert alert-success" role="alert">
                      <i class="dripicons-checkmark mr-2"></i> <%= value %>
                    </div>
                  <% end %>
                <% end %>
              <% end %>

              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
              </div>

              <div class="form-group mt-3 mb-0 text-center">
                <button class="btn btn-dark" type="submit"><%= t('registration.send_instructions') %></button>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

